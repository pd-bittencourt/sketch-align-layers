  "author" : "Pedro D. Bittencourt",
  "authorEmail" : "pedrodmbc@gmail.com",
  "commands" : [
    {
      "script" : "script.js",
      "name" : "Left",
      "shortcut" : "ctrl cmd ←",
      "handlers" : {
        "run" : "alignLeft"
      },
      "identifier" : "alignLayersLeft"
    },
    {
      "script" : "script.js",
      "name" : "Center",
      "shortcut" : "ctrl cmd .",
      "handlers" : {
        "run" : "alignCenter"
      },
      "identifier" : "alignLayersCenter"
    },
    {
      "script" : "script.js",
      "name" : "Right",
      "shortcut" : "ctrl cmd →",
      "handlers" : {
        "run" : "alignRight"
      },
      "identifier" : "alignLayersRight"
    },

    {
      "script" : "script.js",
      "name" : "Top",
      "shortcut" : "ctrl cmd ↑",
      "handlers" : {
        "run" : "alignTop"
      },
      "identifier" : "alignLayersTop"
    },
    {
      "script" : "script.js",
      "name" : "Middle",
      "shortcut" : "ctrl cmd /",
      "handlers" : {
        "run" : "alignMiddle"
      },
      "identifier" : "alignLayersMiddle"
    },
    {
      "script" : "script.js",
      "name" : "Bottom",
      "shortcut" : "ctrl cmd ↓",
      "handlers" : {
        "run" : "alignBottom"
      },
      "identifier" : "alignLayersBottom"
    }
  ],
  "menu" : {
    "items" : [
      "alignLayersLeft",
      "alignLayersCenter",
      "alignLayersRight",
      "-",
      "alignLayersTop",
      "alignLayersMiddle",
      "alignLayersBottom"
    ],
